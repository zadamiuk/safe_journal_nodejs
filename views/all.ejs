
<div class="row mt-4 mb-5">
  <!-- <div class="card mb-4"> -->
    <div class="col-md-10 m-auto">
  <div class="card-body">
    <form action="/notes/all" method="GET">
      <table class="table  table-striped">
        <thead>
          <tr>
          <th><h4>Your notes:</h4></th>
          <th><a href="/notes/new" class="btn btn-primary">Add new note</a></th>
        </tr>
          </thead>
        <tbody>
        <%Note.forEach( function( data){ %> 
          
          <tr>
            <td><b><%= data.title %></b><br> <%= data.date.toDateString() %></td>
            <td style="width: 20%"><a href="/notes/delete/<%= data._id %>" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete note <%= data.title %>?');" class="fixed" data-q_id=data._id >Delete</a></td>
          </tr>
          <tr>
            <td><p><i><%= data.description %></i></p></td>
          </tr>
        
        <% }); %>
        </tbody>
        </table>
    </form>

  
</form>
<a href="/users/logout" class="btn btn-secondary">Logout</a>


